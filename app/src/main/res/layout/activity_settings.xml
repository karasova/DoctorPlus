<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:layout_weight="0.2"></ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Назад"
                android:textSize="12pt"
                android:id="@+id/back"
                android:onClick="onClick"
                android:layout_weight="0.8"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменение данных профиля"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15pt"
            android:padding="15dp"></TextView>

        <EditText
            android:id="@+id/logedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Новое ID"
            android:gravity="left"
            android:background="@drawable/field_blue"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/passedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Новый пароль"
            android:gravity="left"
            android:background="@drawable/field_blue"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <Button
            android:id="@+id/butt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обновить"
            android:onClick="onClick"
            android:background="@drawable/field_orange"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="50dp"
            android:stateListAnimator="@null"
            android:textColor="@color/textColor"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/menu"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:background="@color/menuColor"
            android:padding="20dp"
            android:id="@+id/home"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/calls"
            android:background="@color/menuColor"
            android:padding="22dp"
            android:id="@+id/calls"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/account_active"
            android:background="@color/menuColor"
            android:id="@+id/account"
            android:padding="20dp"
            />

    </LinearLayout>


</RelativeLayout>